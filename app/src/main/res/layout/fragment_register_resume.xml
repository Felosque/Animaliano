<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_resume"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:adjustViewBounds="true"
                            android:layout_weight="1"
                            android:src="@mipmap/logo" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtName_Resume"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/text"
                                    android:gravity="center"
                                    android:text="TextView" />

                                <TextView
                                    android:id="@+id/txtMailResume"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/text"
                                    android:textAlignment="center"
                                    android:text="TextView" />

                        </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtDesc_Resume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:text="TextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="30dp"
                            android:onClick="nextStep_Click"
                            android:background="@drawable/button_border"
                            android:insetTop="15dp"
                            android:insetBottom="15dp"
                            android:text="Confirmar Registro"
                            android:textColor="@color/text" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:onClick="backStep_Click"
                            android:background="@drawable/button_border"
                            android:insetTop="15dp"
                            android:insetBottom="15dp"
                            android:text="Cancelar Registro"
                            android:textColor="@color/text" />

                </LinearLayout>

        </LinearLayout>

</RelativeLayout>